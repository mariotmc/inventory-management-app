extends layout

block content
 div.category-delete-container
  h1.page-heading Delete: #{category.name}
  
  if categoryProducts.length
   if categoryProducts.length == 1
    p.delete-products-warning Delete the following product before attempting to delete this category.
   if categoryProducts.length > 1
    p.delete-products-warning Delete the following products before attempting to delete this category.
  
   ul.list-of-category-products
    each product in categoryProducts
     a(href=product.url)
      li.category-product
       if category.image == "{}"
        img(src="/images/defaultCandy.webp", alt="")
       else
        img(src=`${category.image.path}`, alt="")
       p #{product.name}

  else
   p Do you really want to delete this category?
    
   form(method='POST' action='')
    div
     input#id(type='hidden',name='id', required='true', value=category._id )

    button(type='submit') Delete